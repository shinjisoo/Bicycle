<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="불러온 지도 보기"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#ff7a00"
            android:layout_width="match_parent"
            android:layout_height="53dp" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:id="@+id/mainView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_weight="8"
            android:id="@+id/map_download_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/white"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="8"
            android:background="@android:color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="5"
                android:weightSum="4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/map_download_source_txt"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/map_download_dest_txt"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/map_download_distance_txt"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/map_download_body_txt"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="3"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/map_download_load_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="불러오기"
                    android:textSize="15sp"
                    android:textColor="#ff7a00"
                    android:gravity="center"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/map_download_cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="취소"
                    android:textSize="15sp"
                    android:textColor="#ff7a00"
                    android:gravity="center"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>